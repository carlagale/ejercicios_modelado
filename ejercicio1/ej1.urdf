<?xml version="1.0"?>
<robot name="ej1">

  <!-- Base -->
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0.25"/>
      <mass value="10.0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>

    <visual>
      <origin xyz="0 0 0.25"/>
      <geometry>
        <box size="1 1 0.5"/>
      </geometry>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0.25"/>
      <geometry>
        <box size="1 1 0.5"/>
      </geometry>
    </collision>
  </link>

  <!-- Vertical blue link -->
  <link name="vertical_link">
    <inertial>
      <origin xyz="0 0 1.25"/>
      <mass value="1.0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>

    <visual>
      <origin xyz="0 0 1.25"/>
      <geometry>
        <box size="0.3 0.3 2.5"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 1.25"/>
      <geometry>
        <box size="0.3 0.3 2.5"/>
      </geometry>
    </collision>
  </link>

  <!-- Horizontal blue link -->
  <link name="horizontal_link">
    <inertial>
      <origin xyz="0 0 0.15"/>
      <mass value="1.0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>

    <visual>
      <origin xyz="0 0 0.15"/>
      <geometry>
        <box size="0.3 1.5 0.3"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0.15"/>
      <geometry>
        <box size="0.3 1.5 0.3"/>
      </geometry>
    </collision>
  </link>

  <!-- Joint: Base -> Vertical -->
  <joint name="base2vertical" type="revolute">
    <parent link="base_link"/>
    <child link="vertical_link"/>
    <origin xyz="0 0 0.25" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.8" upper="0.8" effort="1" velocity="1"/>
  </joint>

  <!-- Joint: Vertical -> Horizontal -->
  <joint name="vertical2horizontal" type="revolute">
    <parent link="vertical_link"/>
    <child link="horizontal_link"/>
    <origin xyz="0 0 2.5" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="1" velocity="1"/>
  </joint>

</robot>
