<?xml version="1.0"?>
<robot name="ej1">

  <!-- Base -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="1 1 0.5"/>
      </geometry>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>
  </link>

  <!-- Vertical blue link -->
  <link name="vertical_link">
    <visual>
      <geometry>
        <box size="0.3 0.3 2.5"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
  </link>

  <!-- Horizontal blue link -->
  <link name="horizontal_link">
    <visual>
      <geometry>
        <box size="0.3 1.5 0.3"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
  </link>

  <!-- Joint: Base -> Vertical -->
  <joint name="base2vertical" type="revolute">
    <parent link="base_link"/>
    <child link="vertical_link"/>
    <origin xyz="0 0 0.025" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.8" upper="0.8" effort="1" velocity="1"/>
  </joint>

  <!-- Joint: Vertical -> Horizontal -->
  <joint name="vertical2horizontal" type="revolute">
    <parent link="vertical_link"/>
    <child link="horizontal_link"/>
    <origin xyz="0 0 0.4" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="1" velocity="1"/>
  </joint>

</robot>
